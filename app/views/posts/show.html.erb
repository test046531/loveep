<% provide(:title, "Post-detail") %>
<div class="container">
    <div class="row mt-4">
        <div class="col-md-6 d-flex justify-content-center">
            <% if @post.image_name.present? %>
            <%= image_tag(@post.image_name.url, class: "show-post-image") %>
            <% end %>
        </div>

        <div class="col-md-6">
            <p class="mt-3"><%= @post.content %></p>
            <p class="text-muted">投稿者：<%= link_to "#{@user.name}", user_posts_path(@user), class: "auth-button register-button" %></p>
            <p class="text-muted">投稿日: <%= @post.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
        </div>
    </div>
</div>